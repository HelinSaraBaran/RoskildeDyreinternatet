<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RoskildeDyreinternatet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RoskildeDyreinternatet.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-success px-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">
                    <img src="~/images/DVlog.png" alt="Logo" style="height:30px;" />
                </a>

            
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/About">Om os</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Adopter">Adoptere</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Aktiviteter">Aktiviteter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/BookBesog">Book et besøg</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Blog">Blog</a>
                    </li>
                </ul>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RoskildeDyreinternatet - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>